    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/Brown" />

            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/silver" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/silver" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <layer-list>
            <item android:left="0dp" android:bottom="2dp" android:top="0dp" android:right="2dp">
                <shape>
                    <corners android:radius="10dp" />
                    <gradient android:angle="270" android:endColor="#81232323" android:startColor="#D5202020" />
                </shape>
            </item>
            <item >
                <shape>
                    <corners android:radius="10dp" />
                    <gradient android:angle="270" android:endColor="#AB000000" android:startColor="#45000000" />


                    <padding android:bottom="5dp" android:left="1dp" android:right="5dp" android:top="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>