<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_4"
    android:layout_marginEnd="@dimen/dimen_4"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/iModel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.19"
            android:gravity="center"
            android:padding="8dp"
            android:text="Model"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/iType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:padding="8dp"
            android:text="IP Type"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/iIp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:padding="8dp"
            android:text="IP Address"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/iMac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:padding="8dp"
            android:text="MAC Address"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/iLocation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:padding="8dp"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iTxtReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp"
                android:text="Register"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <Button
                android:id="@+id/iBtnReg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_8"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_gray_ra10"
                android:drawableStart="@drawable/ic_baseline_add_circle_24"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="등록"
                android:textColor="@color/main"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:background="#D6D6D6" />


</LinearLayout>