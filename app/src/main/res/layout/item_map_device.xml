<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_4"
    android:layout_marginEnd="@dimen/dimen_4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemMapLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <CheckBox
            android:id="@+id/itemChkBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:button="@drawable/checkbox_green"
            android:padding="10dp" />


        <ImageView
            android:id="@+id/itemMapIcon"
            android:layout_width="0dp"
            android:padding="8dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:background="@color/transparent"
            android:src="@drawable/icon_ecs30cw" />

        <TextView
            android:id="@+id/itemMapModel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:padding="8dp"
            android:text="Model"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/itemMapIp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="192.168.168.168"
                android:textColor="@color/black"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/itemMapMac"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="192.168.168.168"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/itemMapGroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:padding="8dp"
            android:text="Group"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/itemMapLoc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:padding="8dp"
            android:text="Setup Site"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:background="#D6D6D6" />


</LinearLayout>