        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight=".5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dgEditDoorCamId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Camera ID"
                    android:maxLength="20"
                    android:nextFocusDown="@id/dgEditPass"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dgLayDoorPass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight=".5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dgEditDoorCamPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Camera Password"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:nextFocusDown="@id/dgEditLoc"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dgLayDoorLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dgEditDoorCamLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:imeOptions="actionDone"
                android:maxLength="20"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:singleLine="true"

                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Group Selection"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/dgListDoorGroup"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#e9e9e9" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">


            <Button
                android:id="@+id/dgBtnDoorAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/button_deepgray_ra10"
                android:text="Registering Device "
                android:textColor="@color/SkyBlue" />

            <Button
                android:id="@+id/dgBtnDoorClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.2"
                android:background="@drawable/button_deepgray_ra10"
                android:text="Close"
                android:textColor="@color/white"

                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>